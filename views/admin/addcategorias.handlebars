
{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>Nova Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="name">Nome: </label>
                <input type="text" id="name" name="name" placeholder="Nome da categoria" class="form-control" required
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" required>
                <br>
            <button type="submit" class="btn btn-success">Criar categoria</button>
        </form>
    </div>
</div>
