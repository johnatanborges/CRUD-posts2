<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each posts}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{ title }}</h4>
            <p>Descrição: {{ description }}</p>
            <small>Data: {{ date }}</small>
            <br>
            <small>Categoria: {{ category.name }}</small>
            <br>
            <a href="/admin/postagens/edit/{{id}}">
                <button class="btn btn-success mt-4">Editar postagem</button>
            </a>
            <a href="/admin/postagens/delete/{{id}}">
                <button class="btn btn-danger mt-4">Deletar postagem</button>
            </a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}
