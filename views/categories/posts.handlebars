<h1>{{category.name}}</h1>
{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/post/{{slug}}">
            <button class="btn btn-success">Leia mais</button>
        </a>
        <hr>
        <br>
        <small>Data de publicação: {{date}}</small>
    </div>
</div>
{{else}}
<hr>
<p>Não existem postagens para essa categoria!</p>

{{/each}}
